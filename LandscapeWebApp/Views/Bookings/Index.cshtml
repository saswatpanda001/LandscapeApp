@model IEnumerable<LandscapeWebApp.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div class="min-h-screen bg-gray-50 p-8">
    <div class="container mx-auto">
        <!-- Header Section -->
        <h1 class="text-4xl font-bold text-blue-600 mb-6">📋 Bookings</h1>

        <!-- Create New Button -->
        <div class="mb-6">
            <a asp-action="Create" class="bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition duration-300">
                ➕ Create New Booking
            </a>
        </div>

        <!-- Table Section -->
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
                <thead class="bg-blue-100 text-gray-700">
                    <tr>
                        <th class="px-4 py-2">📅 @Html.DisplayNameFor(model => model.BookingDate)</th>
                        <th class="px-4 py-2">🔎 @Html.DisplayNameFor(model => model.Status)</th>
                        <th class="px-4 py-2">🕰 @Html.DisplayNameFor(model => model.CreatedAt)</th>
                        <th class="px-4 py-2">🛎 @Html.DisplayNameFor(model => model.Service)</th>
                        <th class="px-4 py-2">📧 @Html.DisplayNameFor(model => model.User)</th>
                        <th class="px-4 py-2">⚙️ Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-t hover:bg-gray-50">
                            <td class="px-4 py-3">@Html.DisplayFor(modelItem => item.BookingDate)</td>
                            <td class="px-4 py-3">
                                <span class="inline-block px-3 py-1 rounded-full text-white
                                    @(item.Status == "Confirmed" ? "bg-green-500"
                                    : item.Status == "Pending" ? "bg-yellow-500"
                                    : "bg-red-500")">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>
                            <td class="px-4 py-3">@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td class="px-4 py-3">@Html.DisplayFor(modelItem => item.Service.ServiceName)</td>
                            <td class="px-4 py-3">@Html.DisplayFor(modelItem => item.User.Email)</td>
                            <td class="px-4 py-3 space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.BookingId" class="text-blue-500 hover:underline">✏️ Edit</a>
                                <a asp-action="Details" asp-route-id="@item.BookingId" class="text-green-500 hover:underline">📄 Details</a>
                                <a asp-action="Delete" asp-route-id="@item.BookingId" class="text-red-500 hover:underline">🗑️ Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
