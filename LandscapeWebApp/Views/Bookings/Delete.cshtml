@model LandscapeWebApp.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="min-h-screen bg-gray-50 p-8">
    <div class="container mx-auto">
        <!-- Header Section -->
        <h1 class="text-4xl font-bold text-red-600 mb-6">🚨 Delete Booking</h1>

        <div class="bg-white p-8 rounded-xl shadow-lg border border-red-300">
            <h3 class="text-xl font-semibold text-gray-700 mb-4">Are you sure you want to delete this booking?</h3>
            <p class="text-gray-500 mb-6">This action is permanent and cannot be undone.</p>
            <hr class="mb-6 border-gray-300" />

            <!-- Booking Details -->
            <div class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <p class="text-gray-500 font-medium">📅 Booking Date:</p>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.BookingDate)</p>
                    </div>
                    <div>
                        <p class="text-gray-500 font-medium">🔎 Status:</p>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.Status)</p>
                    </div>
                    <div>
                        <p class="text-gray-500 font-medium">🕰 Created At:</p>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.CreatedAt)</p>
                    </div>
                    <div>
                        <p class="text-gray-500 font-medium">🛎 Service Name:</p>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.Service.ServiceName)</p>
                    </div>
                    <div>
                        <p class="text-gray-500 font-medium">📧 User Email:</p>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.User.Email)</p>
                    </div>
                </div>
            </div>

            <!-- Delete Form -->
            <form asp-action="Delete" class="mt-8" onsubmit="return confirmDelete()">
                <input type="hidden" asp-for="BookingId" />

                <div class="flex space-x-4">
                    <!-- Delete Button with Icon -->
                    <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-lg flex items-center gap-2 hover:bg-red-600 transition duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M9 3v1H4v2h16V4h-5V3h-6zm3 6v9h2V9h-2zm-4 0v9h2V9H8zm8 0v9h2V9h-2z" />
                        </svg>
                        Delete
                    </button>

                    <!-- Cancel Button with Icon -->
                    <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded-lg flex items-center gap-2 hover:bg-gray-600 transition duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M19 13H5v-2h14v2z" />
                        </svg>
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Confirmation Script -->
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this booking? This action is permanent.");
    }
</script>
