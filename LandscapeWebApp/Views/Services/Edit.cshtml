@model LandscapeWebApp.Models.Service

@{
    ViewData["Title"] = "Edit Service";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center">
    <div class="max-w-lg w-full bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-blue-600 mb-6">Edit Service</h1>

        <form asp-action="Edit" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
            <input type="hidden" asp-for="ServiceId" />

            <!-- Service Name (Required, Max 100 Characters) -->
            <div>
                <label asp-for="ServiceName" class="block text-gray-700 font-semibold">Service Name</label>
                <input asp-for="ServiceName" class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       maxlength="100" required />
                <span asp-validation-for="ServiceName" class="text-red-500 text-sm"></span>
            </div>

            <!-- Description (Required, Max 500 Characters) -->
            <div>
                <label asp-for="Description" class="block text-gray-700 font-semibold">Description</label>
                <textarea asp-for="Description" rows="4" class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                          maxlength="500" required></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <!-- Price (Required, Positive Number, Max 10,000) -->
            <div>
                <label asp-for="Price" class="block text-gray-700 font-semibold">Price ($)</label>
                <input asp-for="Price" type="number" step="0.01" min="0.01" max="10000"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
            </div>

            <!-- Duration (Required, Positive Integer, Max 480 mins or 8 hours) -->
            <div>
                <label asp-for="Duration" class="block text-gray-700 font-semibold">Duration (mins)</label>
                <input asp-for="Duration" type="number" min="1" max="480"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="Duration" class="text-red-500 text-sm"></span>
            </div>

            <!-- Buttons -->
            <div class="flex items-center space-x-4">
                <!-- Save Button -->
                <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-300">
                    Save
                </button>

                <!-- Back to List Button -->
                <a asp-action="Index" class="text-gray-600 hover:text-gray-800">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
