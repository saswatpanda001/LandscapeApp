@model LandscapeWebApp.Models.Service

@{
    ViewData["Title"] = "Delete";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center">
    <div class="max-w-lg w-full bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-red-600 mb-4">Confirm Deletion</h1>
        <p class="text-gray-600 mb-6">Are you sure you want to delete this service? This action cannot be undone.</p>

        <!-- Service Details Section -->
        <div class="mb-8">
            <h4 class="text-xl font-semibold text-gray-700">Service Details</h4>
            <hr class="my-4">
            <dl class="space-y-3">
                <div class="flex">
                <dt class="w-1/3 font-semibold text-gray-500">Service Name:</dt>
                <dd class="w-2/3 text-gray-700">@Html.DisplayFor(model => model.ServiceName)</dd>
        </div>
        <div class="flex">
            <dt class="w-1/3 font-semibold text-gray-500">Description:</dt>
            <dd class="w-2/3 text-gray-700">@Html.DisplayFor(model => model.Description)</dd>
        </div>
        <div class="flex">
            <dt class="w-1/3 font-semibold text-gray-500">Price ($):</dt>
            <dd class="w-2/3 text-gray-700">@Html.DisplayFor(model => model.Price)</dd>
        </div>
        <div class="flex">
            <dt class="w-1/3 font-semibold text-gray-500">Duration (mins):</dt>
            <dd class="w-2/3 text-gray-700">@Html.DisplayFor(model => model.Duration)</dd>
        </div>
        </dl>
    </div>

    <!-- Delete Confirmation Form -->
    <form asp-action="Delete" class="space-y-4">
        <input type="hidden" asp-for="ServiceId" />

        <div class="flex items-center justify-between">
            <!-- Delete Button -->
            <button type="submit" class="bg-red-500 text-white px-6 py-3 rounded-lg hover:bg-red-600 transition duration-300">
                Yes, Delete
            </button>

            <!-- Back to List Link -->
            <a asp-action="Index" class="text-gray-500 hover:underline">Cancel and Go Back</a>
        </div>
    </form>
</div>
</div>
