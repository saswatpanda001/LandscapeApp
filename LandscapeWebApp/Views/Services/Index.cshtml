@model IEnumerable<LandscapeWebApp.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="min-h-screen bg-gray-50 p-8">
    <div class="max-w-6xl mx-auto bg-white shadow-lg rounded-lg p-6">
        <!-- Header Section -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-blue-600">Services</h1>
            <a asp-action="Create" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition duration-300">
                + Create New
            </a>
        </div>

        <!-- Table Section -->
        <div class="overflow-x-auto">
            <table class="w-full table-auto border-collapse">
                <thead>
                    <tr class="bg-blue-500 text-white">
                        <th class="p-3 text-left">Service Name</th>
                        <th class="p-3 text-left">Description</th>
                        <th class="p-3 text-left">Price</th>
                        <th class="p-3 text-left">Duration</th>
                        <th class="p-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-b hover:bg-gray-100">
                            <td class="p-3">@Html.DisplayFor(modelItem => item.ServiceName)</td>
                            <td class="p-3">@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="p-3">@Html.DisplayFor(modelItem => item.Price)</td>
                            <td class="p-3">@Html.DisplayFor(modelItem => item.Duration)</td>
                            <td class="p-3 flex space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.ServiceId" class="text-blue-500 hover:text-blue-700">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ServiceId" class="text-green-500 hover:text-green-700">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ServiceId" class="text-red-500 hover:text-red-700">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
