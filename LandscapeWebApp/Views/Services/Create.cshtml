@model LandscapeWebApp.Models.Service

@{
    ViewData["Title"] = "Create";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center">
    <div class="max-w-lg w-full bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-blue-600 mb-4">Create New Service</h1>
        <hr class="mb-6">

        <form asp-action="Create" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

            <!-- Service Name (Required, Max 100 Characters) -->
            <div>
                <label asp-for="ServiceName" class="block text-gray-700 font-medium">Service Name</label>
                <input asp-for="ServiceName" class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400"
                       maxlength="100" required />
                <span asp-validation-for="ServiceName" class="text-red-500 text-sm"></span>
            </div>

            <!-- Description (Required, Max 500 Characters) -->
            <div>
                <label asp-for="Description" class="block text-gray-700 font-medium">Description</label>
                <textarea asp-for="Description" class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400"
                          rows="4" maxlength="500" required></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <!-- Price (Required, Positive Number, Max 10,000) -->
            <div>
                <label asp-for="Price" class="block text-gray-700 font-medium">Price ($)</label>
                <input asp-for="Price" type="number" step="0.01" min="0.01" max="10000"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400" required />
                <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
            </div>

            <!-- Duration (Required, Positive Integer, Max 480 mins or 8 hours) -->
            <div>
                <label asp-for="Duration" class="block text-gray-700 font-medium">Duration (mins)</label>
                <input asp-for="Duration" type="number" min="1" max="480"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400" required />
                <span asp-validation-for="Duration" class="text-red-500 text-sm"></span>
            </div>

            <!-- Submit and Back Buttons -->
            <div class="flex justify-between">
                <button type="submit" class="bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition duration-300">
                    Create Service
                </button>
                <a asp-action="Index" class="text-gray-500 hover:underline">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
