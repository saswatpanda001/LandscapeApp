@model IEnumerable<LandscapeWebApp.Models.Service>

@{
    ViewData["Title"] = "UserService";
}

<div class="min-h-screen bg-gray-50 p-8">
    <h1 class="text-4xl font-bold text-center text-blue-600 mb-8">Our Services</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var service in Model)
        {
            <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition duration-300">
                <h2 class="text-2xl font-bold text-gray-800">@service.ServiceName</h2>
                <p class="text-gray-600 mt-2">@service.Description.Substring(0, Math.Min(service.Description.Length, 100))...</p>
                <p class="text-blue-500 font-bold mt-4">Price: $@service.Price</p>
                <p class="text-gray-500">Duration: @service.Duration mins</p>

                <a href="/UserService/Details/@service.ServiceId"
                   class="inline-block mt-4 px-6 py-2 text-white bg-blue-500 rounded-lg hover:bg-blue-600 transition duration-300">
                    View Details
                </a>
            </div>
        }
    </div>
</div>
